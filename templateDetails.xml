	<config>
		<fields name="params">
			<fieldset name="styling">


				<field name="bgfile" class="" type="media" default=""
					label="TPL_PROTOSTAR_BGFILE_LABEL"
					description="TPL_PROTOSTAR_BGFILE_DESC" />

				<field name="logoFile" class="" type="media" default=""
					label="TPL_PROTOSTAR_LOGO_LABEL"
					description="TPL_PROTOSTAR_LOGO_DESC" />

				<field name="sitetitle"  type="text" default=""
					label="JGLOBAL_TITLE"
					description="JFIELD_ALT_PAGE_TITLE_LABEL"
					filter="string" />

				<field name="sitedescription"  type="text" default=""
					label="JGLOBAL_DESCRIPTION"
					description="JGLOBAL_SUBHEADING_DESC"
					filter="string" />

					

				<field name="widelayout"
					type="radio"
					class="btn-group btn-group-yesno"
					default="1"
					label="TPL_WIDE_LABEL"
					description="TPL_WIDE_DESC"
				>
					<option value="1">JYES</option>
					<option value="0">JNO</option>
				</field>



	<field label="LBL_FOOTER" type="spacer" class="label"/>

					<field name="templateFooterTextColor" class="" type="color" default="#ffffff"
					label="TPL_PROTOSTAR_FOOTER_TEXT_COLOR_LABEL"
					description="TPL_PROTOSTAR_FOOTER_TEXT_COLOR_DESC" />

					<field name="templateFooterBgColor" class="" type="color" default="#0088cc"
					label="TPL_PROTOSTAR_FOOTER_BG_COLOR_LABEL"
					description="TPL_PROTOSTAR_FOOTER_BG_COLOR_DESC" />





	<field label="LBL_SHARE" type="spacer" class="label"/>

				<field name="socialshare"
					type="radio"
					class="btn-group btn-group-yesno"
					default="1"
					label="TPL_SHARE_LABEL"
					description="TPL_SHARE_DESC"
				>
					<option value="1">JYES</option>
					<option value="0">JNO</option>
				</field>

	<field label="LBL_FONT" type="spacer" class="label"/>

				<field name="googleFont"
					type="radio"
					class="btn-group btn-group-yesno"
					default="1"
					label="TPL_PROTOSTAR_FONT_LABEL"
					description="TPL_PROTOSTAR_FONT_DESC"
				>
					<option value="1">JYES</option>
					<option value="0">JNO</option>
				</field>

				<field name="googleFontName" class="" type="text" default="Open+Sans"
					label="TPL_PROTOSTAR_FONT_NAME_LABEL"
					description="TPL_PROTOSTAR_FONT_NAME_DESC" />

				<field name="headercolor" class="" type="color" default="#444444"
					label="TPL_HEADERCOLOR_LABEL"
					description="TPL_HEADERCOLOR_DESC" />

				<field name="googleFontDiv"
					type="radio"
					class="btn-group btn-group-yesno"
					default="1"
					label="TPL_PROTOSTAR_FONT_DIV_LABEL"
					description="TPL_PROTOSTAR_FONT_DIV_DESC"
